{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Tooling files run in Node.js (ESM). Keep this config separate from the browser bundle.
    "lib": ["ESNext"],
    "types": ["node"],

    // Tooling must never emit JS.
    "noEmit": true,

    // Avoid generating build-info for tooling checks.
    "incremental": false
  },
  "include": ["tooling/**/*", "vite.config.ts"],
  "exclude": ["node_modules", "dist", "test", ".stryker-tmp", "stryker-report", "tmp"]
}

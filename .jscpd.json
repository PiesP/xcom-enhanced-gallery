{
  "threshold": 0.5,
  "reporters": ["html", "console"],
  "ignore": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/node_modules/**",
    "**/dist/**",
    "**/test/archive/**",
    "**/coverage/**",
    "**/codeql-reports/**",
    "**/codeql-results/**"
  ],
  "format": ["typescript", "javascript", "css"],
  "minLines": 5,
  "minTokens": 50,
  "output": "./codeql-reports/duplication",
  "silent": false,
  "verbose": true,
  "blame": false,
  "gitignore": true,
  "absolute": false
}

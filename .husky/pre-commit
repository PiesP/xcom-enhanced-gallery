#!/usr/bin/env sh

# =============================================================================
# Pre-commit Hook for X.com Enhanced Gallery
# =============================================================================
#
# Ensures code quality by running automated checks before commits.
# Prevents commits that fail quality standards.
#
# Workflow:
# 1. TypeScript type checking
# 2. Lint staged files
#
# =============================================================================

echo "ğŸ” Pre-commit validation..."

# TypeScript Type Checking
echo "ğŸ“‹ Type checking..."
npm run typecheck || exit 1

# Lint Staged Files
echo "ğŸ§¹ Linting staged files..."
npx lint-staged || exit 1

echo "âœ… Pre-commit validation complete!"
# - Consistent code style across commits
# - Early detection of linting issues
echo "ğŸ”§ Linting staged files..."
npx lint-staged || exit 1

echo "âœ… Pre-commit validation complete!"

#!/usr/bin/env sh

# =============================================================================
# Pre-push Hook for X.com Enhanced Gallery (Optimized)
# =============================================================================
# 푸시 전 최적화된 품질 검사
# HUSKY_SKIP=1 또는 SKIP_TESTS=1 환경변수로 검사를 건너뛸 수 있습니다.
# =============================================================================

# 스킵 옵션 확인
if [ "$HUSKY_SKIP" = "1" ]; then
  echo "⏭️  푸시 전 검증 건너뛰기 (HUSKY_SKIP=1)"
  exit 0
fi

echo "🧪 푸시 전 최적화된 품질 검증 시작..."

# 브랜치별 다른 정책
BRANCH=$(git rev-parse --abbrev-ref HEAD)
REMOTE_BRANCH="${2##*/}"

# 개발 브랜치는 최적화된 가벼운 검사
case "$BRANCH" in
  dev*|feature*|experiment*|refactor*)
    echo "🔧 개발 브랜치: 최적화된 빠른 검증 모드"

    # 포맷 체크
    echo "🎨 코드 포맷팅 검사 중..."
    if ! npm run format:check; then
      echo "⚠️  코드 포맷팅 문제 발견"
      echo "💡 자동 수정: npm run format"
      echo "💡 건너뛰기: HUSKY_SKIP=1 git push"
    fi

    # 최적화된 빠른 테스트
    echo "⚡ 최적화된 빠른 테스트 실행 중..."
    if ! npm run test:fast; then
      echo "⚠️  일부 테스트 실패 (개발 브랜치이므로 경고)"
      echo "💡 전체 테스트: npm run test:optimized"
    fi

    echo "✅ 개발 브랜치 최적화된 검증 완료!"
    exit 0
    ;;
esac

# 메인 브랜치는 더 엄격한 검사
case "$REMOTE_BRANCH" in
  main|master)
    echo "🏛️  메인 브랜치 푸시: 엄격한 검증 모드"

    # 포맷 체크
    echo "🎨 코드 포맷팅 검사 중..."
    if ! npm run format:check; then
      echo "❌ 코드 포맷팅 검사 실패"
      echo "💡 'npm run format' 명령어로 포맷팅을 수정해주세요."
      exit 1
    fi

    # 최적화된 전체 테스트 실행 (스킵 가능)
    if [ "$SKIP_TESTS" = "1" ]; then
      echo "⏭️  테스트 건너뛰기 (SKIP_TESTS=1)"
    else
      echo "🧪 최적화된 전체 테스트 실행 중..."
      if ! npm run test:optimized; then
        echo "❌ 테스트 실패"
        echo "💡 실패한 테스트를 수정한 후 다시 시도해주세요."
        echo "💡 긴급 푸시: SKIP_TESTS=1 git push"
        exit 1
      fi
    fi
    ;;
  *)
    # 기타 브랜치는 최적화된 기본 검증
    echo "🔀 일반 브랜치: 최적화된 기본 검증 모드"

    echo "🎨 코드 포맷팅 검사 중..."
    if ! npm run format:check; then
      echo "⚠️  코드 포맷팅 문제 발견 (경고)"
      echo "💡 수정 권장: npm run format"
    fi

    echo "⚡ 최적화된 빠른 테스트 실행 중..."
    if ! npm run test:fast; then
      echo "⚠️  일부 테스트 실패 (경고)"
      echo "💡 전체 테스트: npm run test:optimized"
    fi
    ;;
esac

echo "✅ 최적화된 푸시 전 검증 완료!"

#!/usr/bin/env sh

# Pre-push: ensure types and tests are good before pushing
SCOPE=${XEG_PREPUSH_SCOPE:-}
if [ -n "$SCOPE" ]; then
  echo "ğŸ§ª Pre-push: typecheck + tests (project: $SCOPE)"
else
  echo "ğŸ§ª Pre-push: typecheck + tests"
fi

npm run typecheck || {
  echo "âŒ Typecheck failed"
  exit 1
}

if [ -n "$SCOPE" ]; then
  npm run test:$SCOPE || {
    echo "âŒ Tests ($SCOPE) failed"
    exit 1
  }
else
  npm run test || {
  echo "âŒ Tests failed"
  exit 1
  }
fi

echo "âœ… Pre-push checks passed"

# Explicitly exit with success to avoid any shell/state quirks returning a non-zero code
exit 0

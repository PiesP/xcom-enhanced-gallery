{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "types": ["vite/client", "vitest/globals", "node"],
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    // Relax strictness for test-only dynamic imports and legacy helper paths
    "strict": false,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false
  },
  "include": ["types/**/*.d.ts", "src/**/*.ts", "src/**/*.tsx", "test/**/*.ts", "test/**/*.tsx", "test/**/*.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "test/archive/**",
    "test/refactoring/**",
    "test/unit/lint/**",
    "test/unit/policies/**",
    "test/styles/**",
    "playwright/**"
  ]
}

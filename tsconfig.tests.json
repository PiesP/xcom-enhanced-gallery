{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "types": ["vite/client", "vitest/globals", "node"],
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    // 테스트 전용 해상도/엄격도 완화: 레거시 경로 및 동적 import 호환
    "moduleResolution": "bundler",
    "strict": false,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,
    "skipLibCheck": true
  },
  "include": ["types/**/*.d.ts", "src/**/*.ts", "src/**/*.tsx", "test/**/*.ts", "test/**/*.tsx", "test/**/*.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "test/archive/**",
    "test/refactoring/**",
    "test/unit/lint/**",
    "test/unit/policies/**",
    "test/styles/**",
    "playwright/**"
  ]
}

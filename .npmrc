# NPM global configuration (applies to all project scripts)
# ⚠️ Local developer settings can be overridden in config/local/*
# CI/CD uses XEG_DISABLE_LOCAL_CONFIG=true to use only this configuration

# ===== Node.js memory settings =====
# Applied to all npm scripts (8GB memory allocation)
node-options=--max-old-space-size=8192

# ===== Dependency management =====
# Allow legacy peer dependencies (prevent dependency conflicts)
legacy-peer-deps=true

# Disable strict peer dependency checks
strict-peer-dependencies=false

# Maintain package lock file
package-lock=true

# Prioritize deduplication
prefer-dedupe=true

# ===== Performance optimization =====
# Maximum parallel download connections (utilize 12 cores)
maxsockets=50

# Prioritize cache usage (minimize network requests)
prefer-offline=true

# Disable progress indicator (improve performance for CI/bulk installations)
progress=false

# Disable automatic security audit (managed separately via npm audit script)
audit=false

# ===== Logging and notifications =====
# Log level (show errors only)
loglevel=error

# Hide funding messages
fund=false

# Disable update notifications
update-notifier=false

# ===== Installation options =====
# Install optional dependencies
optional=true

# ===== Timeout settings =====
fetch-timeout=60000
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# NPM 설정 (개발 환경 최적화)

# Legacy peer deps 허용 (의존성 충돌 방지)
legacy-peer-deps=true

# 엄격한 peer deps 체크 비활성화
strict-peer-dependencies=false

# 패키지 잠금 파일 유지
package-lock=true

# 로그 레벨 (오류만 표시)
loglevel=error

# 펀딩 메시지 숨김
fund=false

# 업데이트 알림 비활성화
update-notifier=false

# 선택적 의존성 설치
optional=true

# 타임아웃 설정
fetch-timeout=60000
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

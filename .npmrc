# NPM 설정 (CI 친화적)
# Windows/Linux 호환성 및 CI 최적화

# Legacy peer deps 허용 (의존성 충돌 방지)
legacy-peer-deps=true

# 엄격한 peer deps 체크 비활성화
strict-peer-dependencies=false

# 패키지 잠금 파일 자동 업데이트 방지 (CI 안정성)
package-lock=true

# 진행 표시 최소화 (CI 로그 정리)
loglevel=error

# 색상 출력 (로컬 개발 경험 향상, CI는 자동 비활성화)
color=true

# 펀딩 메시지 숨김 (CI 로그 정리)
fund=false

# 업데이트 알림 비활성화
update-notifier=false

# 스크립트 셸 설정 (크로스 플랫폼)
# Windows: PowerShell 또는 cmd, Linux/CI: sh
script-shell=

# 엔진 엄격 체크 비활성화 (Node 버전 유연성)
engine-strict=false

# 선택적 의존성 설치 시도 (실패해도 계속)
optional=true

# 저장 시 정확한 버전 고정
save-exact=false

# 타임아웃 설정 (네트워크 불안정 대비)
fetch-timeout=60000
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

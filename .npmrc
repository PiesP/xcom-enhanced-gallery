# NPM 글로벌 설정 (모든 프로젝트 스크립트에 적용)
# ⚠️ 로컬 개발자 설정은 config/local/*에서 override 가능
# CI/CD는 XEG_DISABLE_LOCAL_CONFIG=true로 이 설정만 사용

# ===== Node.js 메모리 설정 =====
# 모든 npm 스크립트에 적용 (8GB 메모리 할당)
node-options=--max-old-space-size=8192

# ===== 의존성 관리 =====
# Legacy peer deps 허용 (의존성 충돌 방지)
legacy-peer-deps=true

# 엄격한 peer deps 체크 비활성화
strict-peer-dependencies=false

# 패키지 잠금 파일 유지
package-lock=true

# 중복 제거 우선
prefer-dedupe=true

# ===== 성능 최적화 =====
# 병렬 다운로드 최대 연결 수 (12코어 활용)
maxsockets=50

# 캐시 우선 사용 (네트워크 요청 최소화)
prefer-offline=true

# 진행 표시 비활성화 (CI/대량 설치 성능 향상)
progress=false

# 자동 보안 감사 비활성화 (별도 npm audit 스크립트로 관리)
audit=false

# ===== 로그 및 알림 =====
# 로그 레벨 (오류만 표시)
loglevel=error

# 펀딩 메시지 숨김
fund=false

# 업데이트 알림 비활성화
update-notifier=false

# ===== 설치 옵션 =====
# 선택적 의존성 설치
optional=true

# ===== 타임아웃 설정 =====
fetch-timeout=60000
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

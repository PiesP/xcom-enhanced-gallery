# EditorConfig: 크로스 플랫폼 편집기 설정
# https://editorconfig.org

root = true

# 모든 파일 기본 설정
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown 파일
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# JSON 파일
[*.{json,jsonc}]
indent_size = 2
max_line_length = 120

# YAML 파일
[*.{yml,yaml}]
indent_size = 2

# TypeScript/JavaScript 파일
[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_size = 2
max_line_length = 100

# CSS 파일
[*.{css,scss,sass,less}]
indent_size = 2

# HTML 파일
[*.html]
indent_size = 2

# Python 파일
[*.py]
indent_size = 4
max_line_length = 100

# Shell 스크립트
[*.sh]
end_of_line = lf

# PowerShell 스크립트
[*.ps1]
indent_size = 4

# Makefile
[Makefile]
indent_style = tab

# Batch 파일
[*.{bat,cmd}]
end_of_line = crlf

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 100

[*.{ts,tsx,js,jsx,mjs,cjs}]
quote_type = single
curly_bracket_next_line = false
max_line_length = 100

[*.{json,json5}]
indent_size = 2
max_line_length = 100

[*.{yml,yaml}]
indent_size = 2
max_line_length = 100

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{css,scss,sass}]
indent_size = 2
max_line_length = 100

[Makefile]
indent_style = tab

[*.{sh,bat,cmd}]
end_of_line = lf
indent_size = 2

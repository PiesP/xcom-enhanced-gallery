{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    // Target & Libraries
    // Required for tsc direct usage; Deno provides these automatically
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],

    // Module System (Deno supported values)
    // Note: Deno supports "nodenext", "esnext", "preserve" for module
    // and "nodenext", "bundler" for moduleResolution
    "module": "ESNext",
    "moduleResolution": "bundler",

    // JSX for Solid.js
    "jsx": "preserve",
    "jsxImportSource": "solid-js",

    // Strict Type Checking
    // Deno defaults strict=true, but tsc needs explicit declaration
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    // Module handling
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "resolveJsonModule": true,

    // Emit
    "noEmit": true,
    "skipLibCheck": true,

    // Path Aliases (synchronized with deno.json imports)
    // Required for IDE/editor support since deno.json paths take precedence at runtime
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@bootstrap/*": ["./src/bootstrap/*"],
      "@constants": ["./src/constants/index.ts"],
      "@constants/*": ["./src/constants/*"],
      "@features/*": ["./src/features/*"],
      "@shared/*": ["./src/shared/*"],
      "@styles/*": ["./src/styles/*"],
      "@types/*": ["./src/types/*"]
    },

    // Build Performance
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",

    // Compatibility
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "dist", "build", "coverage", ".stryker-tmp"]
}

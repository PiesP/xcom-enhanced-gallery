{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "_comment": "This config was generated using 'stryker init'",
  "packageManager": "npm",
  "reporters": ["html", "clear-text", "progress"],
  "testRunner": "vitest",
  "vitest": {
    "configFile": "vitest.stryker.config.ts"
  },
  "testRunner_comment": "Take a look at https://stryker-mutator.io/docs/stryker-js/vitest-runner for information about the vitest runner.",
  "coverageAnalysis": "perTest",
  "ignoreStatic": true,
  "incremental": true,
  "concurrency": 16,
  "mutate": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "!src/**/*.d.ts",
    "!src/types/**/*",
    "!src/constants/**/*",
    "!src/styles/**/*",
    "!src/**/index.ts",
    "!src/bootstrap/**/*",
    "!src/shared/external/**/*",
    "!src/shared/types/**/*",
    "!src/shared/styles/**/*"
  ],
  "mutator": {
    "excludedMutations": ["StringLiteral"]
  }
}

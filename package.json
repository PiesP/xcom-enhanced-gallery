{
  "name": "xcom-enhanced-gallery",
  "version": "0.3.1",
  "description": "Media viewer and download functionality for X.com",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "// === Build ===": "",
    "clean": "rimraf dist",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "build": "npm run clean && npm run build:dev && npm run build:prod",
    "postbuild": "node ./scripts/validate-build.js",
    "prebuild:dev": "npm run deps:check",
    "prebuild:prod": "npm run deps:check",
    "prebuild": "npm run deps:check && npm run validate",
    "// === Test ===": "",
    "test": "vitest --project fast run",
    "test:all": "vitest run",
    "test:watch": "vitest --project fast",
    "test:coverage": "vitest --project unit --coverage",
    "pretest:coverage": "npm run build:prod",
    "test:ui": "vitest --ui --project fast",
    "test:smoke": "vitest --project smoke run",
    "test:fast": "vitest --project fast run",
    "test:unit": "vitest --project unit run",
    "test:styles": "vitest --project styles run",
    "test:perf": "vitest --project performance run",
    "test:phases": "vitest --project phases run",
    "test:refactor": "vitest --project refactor run",
    "test:naming": "vitest run test/phase-24a-file-naming-convention.test.ts test/phase-24b-file-naming-convention.test.ts test/phase-24c-file-naming-convention.test.ts",
    "test:ci:node22": "cross-env CI=true vitest --project fast run --reporter=dot",
    "test:ci:node20": "cross-env CI=true vitest --project unit --project styles run --coverage --reporter=dot",
    "// === E2E ===": "",
    "e2e:smoke": "playwright test playwright/smoke --config=playwright.config.ts",
    "// === Lint & Format ===": "",
    "lint": "eslint ./src --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "lint:staged": "lint-staged",
    "typecheck": "tsgo --project ./tsconfig.json --noEmit",
    "typecheck:tests": "tsgo --project ./tsconfig.tests.json --noEmit",
    "format": "prettier --write .",
    "validate": "npm run typecheck && npm run lint:fix && npm run format",
    "// === Dependencies ===": "",
    "deps:check": "dependency-cruiser src --validate --config .dependency-cruiser.cjs",
    "deps:json": "dependency-cruiser --config .dependency-cruiser.cjs --output-type json --output-to docs/dependency-graph.json src",
    "deps:graph:dot": "dependency-cruiser --config .dependency-cruiser.cjs --output-type dot src > docs/dependency-graph.dot",
    "deps:graph": "node ./scripts/generate-dep-graph.cjs",
    "deps:all": "npm run deps:json && npm run deps:graph:dot && npm run deps:graph && npm run deps:check",
    "// === Maintenance ===": "",
    "maintenance:check": "node ./scripts/maintenance-check.js",
    "maintenance:scan": "npm run maintenance:check && npm audit && npm outdated",
    "// === Git Hooks ===": "",
    "prepare": "husky"
  },
  "dependencies": {
    "solid-js": "1.9.9"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-typescript": "^7.27.1",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.37.0",
    "@playwright/test": "^1.56.0",
    "@solidjs/testing-library": "^0.8.10",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.7.2",
    "@types/tampermonkey": "^5.0.4",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@typescript/native-preview": "^7.0.0-dev.20251011.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "babel-preset-solid": "^1.9.9",
    "cross-env": "^10.1.0",
    "cssnano": "^7.1.1",
    "dependency-cruiser": "^17.0.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.4",
    "playwright": "^1.56.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-custom-properties": "^14.0.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "terser": "^5.44.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vite-plugin-solid": "^2.11.9",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "bash -c 'npm run typecheck'"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ]
  }
}

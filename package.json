{
  "name": "xcom-enhanced-gallery",
  "version": "0.2.4",
  "description": "Media viewer and download functionality for X.com",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite --mode development",
    "build": "npm run build:prod",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "build:all": "npm run build:dev && npm run build:prod",
    "clean": "rimraf dist",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:fast": "vitest run --pool=threads --poolOptions.threads.minThreads=1 --poolOptions.threads.maxThreads=4 --poolOptions.threads.isolate=false --exclude='**/refactoring/**' --exclude='**/tdd-*' --exclude='**/integration/**'",
    "test:local": "cross-env VITEST_MODE=optimized vitest run --coverage",
    "test:local:watch": "cross-env VITEST_MODE=optimized vitest",
    "test:threads": "node -e \"console.log('🖥️  로컬 환경 CPU 정보:'); const os = require('os'); console.log('   논리 프로세서:', os.cpus().length, '개'); const isCI = !!(process.env.CI || process.env.GITHUB_ACTIONS); console.log('   CI 환경:', isCI ? 'Yes (2-4 vCPU)' : 'No'); const mode = process.env.VITEST_MODE || 'default'; console.log('   테스트 모드:', mode); const threads = isCI ? (mode === 'optimized' ? 3 : 2) : (mode === 'optimized' ? Math.max(2, Math.floor(os.cpus().length / 3)) : Math.max(2, Math.floor(os.cpus().length / 4))); console.log('   최적 스레드 수:', threads, '개');\"",
    "test:optimized": "vitest run --coverage",
    "test:ci": "vitest run --coverage --reporter=verbose --pool=threads",
    "test:fix": "vitest run --reporter=verbose",
    "test:fix:watch": "vitest --reporter=verbose",
    "lint": "eslint ./src --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint ./src --report-unused-disable-directives --max-warnings 0 --fix",
    "lint:staged": "lint-staged",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "quality": "npm run typecheck && npm run lint && npm run format:check && npm run test:optimized",
    "validate": "npm run typecheck && npm run lint:fix && npm run format",
    "prebuild": "npm run validate && npm run test:fast",
    "deps:check": "dependency-cruiser src --validate --config .dependency-cruiser.cjs",
    "deps:graph": "dependency-cruiser --config .dependency-cruiser.cjs --output-type dot src | dot -T svg > docs/dependency-graph.svg || dependency-cruiser --config .dependency-cruiser.cjs --output-type dot src | sfdp -T svg > docs/dependency-graph.svg",
    "deps:graph:dot": "dependency-cruiser --config .dependency-cruiser.cjs --output-type dot src > docs/dependency-graph.dot",
    "deps:json": "dependency-cruiser --config .dependency-cruiser.cjs --output-type json --output-to docs/dependency-graph.json src",
    "deps:all": "npm run deps:json && npm run deps:graph:dot && npm run deps:graph && npm run deps:check",
    "prepare": "husky",
    "postinstall": "npm run prepare"
  },
  "dependencies": {
    "@preact/signals": "^2.2.1",
    "fflate": "^0.8.2",
    "preact": "^10.27.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "9.32.0",
    "@preact/preset-vite": "^2.10.2",
    "@testing-library/jest-dom": "6.6.4",
    "@testing-library/preact": "3.2.4",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.2.0",
    "@types/tampermonkey": "^5.0.4",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitest/coverage-istanbul": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.0.0",
    "cssnano": "7.1.0",
    "dependency-cruiser": "^17.0.1",
    "eslint": "9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.4",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-custom-properties": "^14.0.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "terser": "5.43.1",
    "typescript": "5.9.2",
    "vite": "npm:rolldown-vite@latest",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ]
  }
}

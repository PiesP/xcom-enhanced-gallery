{
  "name": "xcom-enhanced-gallery",
  "version": "0.4.16",
  "description": "Media viewer and download functionality for X.com",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "npm": {
    "nodeOptions": "--max-old-space-size=8192",
    "legacy-peer-deps": true,
    "strict-peer-dependencies": false,
    "package-lock": true,
    "prefer-dedupe": true,
    "maxsockets": 50,
    "prefer-offline": true,
    "progress": false,
    "audit": false,
    "loglevel": "error",
    "fund": false,
    "update-notifier": false,
    "optional": true,
    "fetch-timeout": 60000
  },
  "scripts": {
    "build": "npm run clean && vite build --mode development && vite build",
    "build:dev": "vite build --mode development",
    "clean": "rimraf dist",
    "check": "run-p deps:check tokens:types typecheck lint:fix styles:guard",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:all": "run-p test:unit test:e2e test:coverage security:check",
    "test:watch": "vitest",
    "test:unit": "tsx scripts/run-unit-tests-batched.ts --monitor-memory --retry=1",
    "test:e2e": "playwright test",
    "test:coverage": "vitest run --coverage",
    "deps:check": "dependency-cruiser src --validate --config .dependency-cruiser.cjs && npx tsx scripts/find-orphans.ts",
    "security:check": "tsx scripts/security-surface-check.ts",
    "tokens:types": "tsx scripts/generate-design-token-types.ts",
    "styles:guard": "tsx scripts/validate-style-imports.ts",
    "postbuild": "npm run test:all",
    "prebuild": "npm run check",
    "prepare": "husky"
  },
  "dependencies": {
    "solid-js": "1.9.10"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@babel/core": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@csstools/postcss-oklab-function": "^4.0.12",
    "@eslint/js": "^9.39.1",
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "@playwright/test": "^1.56.1",
    "@solidjs/testing-library": "^0.8.10",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/browser": "^4.0.13",
    "@vitest/browser-playwright": "^4.0.13",
    "@vitest/coverage-v8": "^4.0.13",
    "@vitest/ui": "^4.0.13",
    "autoprefixer": "^10.4.22",
    "babel-preset-solid": "^1.9.10",
    "cssnano": "^7.1.2",
    "dependency-cruiser": "^17.3.1",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "fast-glob": "^3.3.3",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.56.1",
    "postcss": "^8.5.6",
    "postcss-custom-properties": "^14.0.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.2",
    "rolldown-vite": "^7.2.7",
    "rollup-plugin-visualizer": "^6.0.5",
    "terser": "^5.44.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite-plugin-solid": "^2.11.10",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.13"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ],
    "*.{json,yml,yaml}": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ]
  },
  "volta": {
    "node": "24.11.1"
  }
}

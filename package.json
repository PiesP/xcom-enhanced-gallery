{
  "name": "xcom-enhanced-gallery",
  "version": "0.2.4",
  "description": "Media viewer and download functionality for X.com",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "pretest": "node ./scripts/pretest-hook.mjs",
    "clean": "rimraf dist",
    "dev": "vite --mode development",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "build": "npm run clean && npm run build:dev && npm run build:prod",
    "postbuild": "node ./scripts/validate-build.js",
    "test": "vitest run",
    "test:ref": "cross-env VITEST_INCLUDE_REF_TESTS=1 vitest run",
    "test:fast": "cross-env TEST_FAST=true vitest run",
    "test:nobuild": "vitest run",
    "test:ci": "cross-env CI=true TEST_SKIP_BUILD=true vitest run --reporter=dot",
    "test:coverage:ci": "cross-env CI=true TEST_SKIP_BUILD=true vitest -coverage --reporter=dot",
    "test:watch": "vitest",
    "test:coverage": "vitest -coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint ./src --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "lint:staged": "lint-staged",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "validate": "npm run typecheck && npm run lint:fix && npm run format",
    "prebuild": "npm run deps:all && npm run validate",
    "prebuild:all": "npm run build && npm run test:nobuild",
    "deps:check": "dependency-cruiser src --validate --config .dependency-cruiser.cjs",
    "deps:graph": "npm run deps:gen",
    "deps:graph:dot": "npm run deps:gen",
    "deps:json": "npm run deps:gen",
    "deps:gen": "node ./scripts/deps-runner.mjs",
    "deps:all": "npm run deps:gen && npm run deps:check",
    "deps:all:legacy": "npm run deps:all",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "dependencies": {
    "preact": "10.27.2",
    "@preact/signals": "2.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.55.1",
    "@preact/preset-vite": "^2.10.2",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/preact": "^3.2.4",
    "@types/node": "^24.5.2",
    "@types/tampermonkey": "^5.0.4",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/coverage-istanbul": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.0.0",
    "cssnano": "^7.1.1",
    "dependency-cruiser": "^17.0.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.1",
    "playwright": "^1.55.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-custom-properties": "^14.0.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "terser": "^5.44.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ]
  },
  "xeg": {
    "depGraph": {
      "sourceDir": "src",
      "configFile": ".dependency-cruiser.cjs",
      "outputDir": "docs",
      "files": {
        "json": "dependency-graph.json",
        "dot": "dependency-graph.dot",
        "svg": "dependency-graph.svg",
        "html": "dependency-graph.html"
      }
    }
  }
}

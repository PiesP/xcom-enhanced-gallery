{
  "name": "xcom-enhanced-gallery",
  "version": "1.0.0",
  "description": "Media viewer and download functionality for X.com",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "npm": {
    "nodeOptions": "--max-old-space-size=8192"
  },
  "scripts": {
    "build": "tsx scripts/verify-pipeline.ts",
    "build:fast": "tsx scripts/verify-pipeline.ts --fast",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build",
    "clean": "rm -rf dist",
    "generate:icons": "tsx scripts/generate-hero-icons.ts",
    "check": "run-p deps:check typecheck lint styles:guard security:check",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src --max-diagnostics=100",
    "lint:fix": "biome check --write src",
    "lint:ci": "biome ci src",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "test": "npm run test:batched",
    "test:fast": "vitest run",
    "posttest:fast": "tsx scripts/cleanup-test-workers.ts",
    "test:watch": "vitest",
    "test:batched": "tsx scripts/run-unit-tests-batched.ts --monitor-memory --retry=1",
    "posttest:batched": "tsx scripts/cleanup-test-workers.ts",
    "test:ct": "playwright test -c playwright-ct.config.ts --grep-invert @visual",
    "test:e2e": "playwright test",
    "test:a11y": "playwright test playwright/accessibility",
    "test:visual": "playwright test -c playwright-ct.config.ts --grep @visual",
    "test:coverage": "vitest run --coverage",
    "test:mutation": "stryker run",
    "test:mutation:generate": "tsx scripts/mutation-improvements/generate-tests.ts",
    "test:all": "run-s test:batched test:ct test:visual test:a11y test:e2e",
    "deps:check": "dependency-cruiser src --validate --config .dependency-cruiser.cjs",
    "deps:unused": "depcheck",
    "security:check": "tsx scripts/security-surface-check.ts",
    "styles:guard": "tsx scripts/validate-style-imports.ts",
    "bundle:check": "tsx scripts/check-bundle-size.ts"
  },
  "dependencies": {
    "solid-js": "1.9.10"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@babel/core": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@biomejs/biome": "^2.3.8",
    "@csstools/postcss-oklab-function": "^4.0.12",
    "@playwright/experimental-ct-solid": "^1.48.2",
    "@playwright/test": "^1.57.0",
    "@size-limit/file": "^12.0.0",
    "@size-limit/webpack": "^12.0.0",
    "@solidjs/testing-library": "^0.8.10",
    "@stryker-mutator/core": "^9.4.0",
    "@stryker-mutator/vitest-runner": "^9.4.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/node": "^24.10.1",
    "@vitest/browser": "^4.0.15",
    "@vitest/browser-playwright": "^4.0.15",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "autoprefixer": "^10.4.22",
    "axe-playwright": "^2.2.2",
    "babel-preset-solid": "^1.9.10",
    "cssnano": "^7.1.2",
    "depcheck": "^1.4.7",
    "fast-glob": "^3.3.3",
    "jiti": "^2.6.1",
    "jsdom": "^27.2.0",
    "knip": "^5.71.0",
    "lint-staged": "^16.2.7",
    "msw": "^2.12.4",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "size-limit": "^12.0.0",
    "terser": "^5.44.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "8.0.0-beta.0",
    "vite-plugin-monkey": "^7.1.5",
    "vite-plugin-solid": "^2.11.10",
    "vitest": "^4.0.15"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "biome check --write"
    ],
    "*.{md,json,yml,yaml,css,scss}": [
      "biome format --write"
    ]
  },
  "overrides": {
    "playwright": "$playwright",
    "esbuild": "0.25.0"
  },
  "volta": {
    "node": "24.11.1"
  }
}

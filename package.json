{
  "name": "xcom-enhanced-gallery",
  "version": "0.4.2",
  "description": "Media viewer and download functionality for X.com",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "// ===== Build ===== ": "",
    "build": "npm run clean && vite build --mode development && vite build --mode production",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "clean": "rimraf dist",
    "prebuild": "npm run validate:pre",
    "// ===== NOTE: postbuild uses validate-build.js (CI+Local, UserScript-specific) ===== ": "",
    "postbuild": "node ./scripts/validate-build.js",
    "// ===== Quality ===== ": "",
    "validate": "run-p typecheck lint:all && npm run format",
    "validate:pre": "run-p typecheck lint:all deps:check test:browser e2e:smoke",
    "validate:full": "run-p typecheck lint:all deps:check && run-s codeql:check test:browser e2e:all",
    "// ===== Typecheck ===== ": "",
    "typecheck": "tsgo --project ./tsconfig.json --noEmit",
    "typecheck:tests": "tsgo --project ./tsconfig.tests.json --noEmit",
    "// ===== Lint ===== ": "",
    "lint": "eslint ./src --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint ./src --fix",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:css:fix": "stylelint \"src/**/*.css\" --fix",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"#node_modules\" \"#coverage\" \"#codeql-reports\" \"#codeql-results\" \"#test-results\" \"#dist\" \"#docs/temp\" \"#docs/archive\" \"#scripts/temp\"",
    "lint:md:fix": "markdownlint-cli2 --fix \"**/*.md\" \"#node_modules\" \"#coverage\" \"#codeql-reports\" \"#codeql-results\" \"#test-results\" \"#dist\" \"#docs/temp\" \"#docs/archive\" \"#scripts/temp\"",
    "lint:all": "run-p lint lint:css lint:md",
    "lint:all:fix": "run-p lint:fix lint:css:fix lint:md:fix",
    "lint:staged": "lint-staged",
    "// ===== Format ===== ": "",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "// ===== Security ===== ": "",
    "codeql:check": "node ./scripts/check-codeql.js",
    "// ===== NOTE: CI uses github/codeql-action@v3 (GitHub official), local only ===== ": "",
    "// ===== Test: Main ===== ": "",
    "test": "(vitest --project fast run --reporter=dot 2>&1 | cat || true) && npm run test:raf",
    "test:all": "(vitest run && npm run test:cleanup) || (npm run test:cleanup && exit 1)",
    "test:watch": "vitest --project fast",
    "test:ui": "vitest --ui --project fast",
    "// ===== Test: Coverage ===== ": "",
    "test:coverage": "(vitest --project unit --coverage --run && npm run test:cleanup) || (npm run test:cleanup && exit 1)",
    "pretest:coverage": "npm run build:prod",
    "// ===== Test: Projects ===== ": "",
    "test:smoke": "(vitest --project smoke run && npm run test:cleanup) || (npm run test:cleanup && exit 1)",
    "test:unit": "(vitest --project unit run && npm run test:cleanup) || (npm run test:cleanup && exit 1)",
    "test:styles": "(vitest --project styles run && npm run test:cleanup) || (npm run test:cleanup && exit 1)",
    "test:perf": "(vitest --project performance run && npm run test:cleanup) || (npm run test:cleanup && exit 1)",
    "test:phases": "(vitest --project phases run && npm run test:cleanup) || (npm run test:cleanup && exit 1)",
    "test:refactor": "(vitest --project refactor run && npm run test:cleanup) || (npm run test:cleanup && exit 1)",
    "test:raf": "vitest --project raf-timing run",
    "test:cleanup": "node ./scripts/cleanup-vitest-workers.js",
    "// ===== Test: Browser ===== ": "",
    "test:browser": "(vitest --project browser run && npm run test:cleanup) || (npm run test:cleanup && exit 1)",
    "pretest:browser": "rimraf node_modules/.vite/vitest",
    "test:browser:ui": "vitest --project browser --ui",
    "// ===== E2E ===== ": "",
    "e2e:smoke": "playwright test playwright/smoke",
    "e2e:a11y": "cross-env PLAYWRIGHT_TEST_DIR=accessibility playwright test",
    "e2e:all": "run-s e2e:smoke e2e:a11y",
    "// ===== Dependencies ===== ": "",
    "deps:check": "dependency-cruiser src --validate --config .dependency-cruiser.cjs",
    "// ===== NOTE: CI uses 'deps:check' only, graph generation is local-only ===== ": "",
    "deps:json": "node ./scripts/generate-dep-graph.js --format=json",
    "deps:dot": "node ./scripts/generate-dep-graph.js --format=dot",
    "deps:graph": "node ./scripts/generate-dep-graph.js --format=svg",
    "deps:all": "npm run deps:check && node ./scripts/generate-dep-graph.js --format=all",
    "// ===== Maintenance ===== ": "",
    "// ===== NOTE: All maintenance scripts are local-only (removed maintenance.yml workflow) ===== ": "",
    "maintenance:check": "node ./scripts/maintenance-check.js",
    "maintenance:scan": "run-s maintenance:check && run-p audit outdated",
    "audit": "npm audit",
    "outdated": "npm outdated",
    "// ===== Shortcuts ===== ": "",
    "dev": "npm run validate && npm run build:dev",
    "ci": "npm run validate:ci && npm run test:all && npm run e2e:all",
    "prerelease": "npm run validate:full && npm run build",
    "// ===== Git Hooks ===== ": "",
    "prepare": "husky"
  },
  "dependencies": {
    "solid-js": "1.9.10"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@babel/core": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@csstools/postcss-oklab-function": "^4.0.12",
    "@eslint/js": "^9.38.0",
    "@playwright/test": "^1.56.1",
    "@solidjs/testing-library": "^0.8.10",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/node": "^24.9.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@typescript/native-preview": "^7.0.0-dev.20251030.1",
    "@vitest/browser": "^4.0.5",
    "@vitest/browser-playwright": "^4.0.5",
    "@vitest/coverage-v8": "^4.0.5",
    "@vitest/ui": "^4.0.5",
    "autoprefixer": "^10.4.21",
    "babel-preset-solid": "^1.9.10",
    "cross-env": "^10.1.0",
    "cssnano": "^7.1.2",
    "dependency-cruiser": "^17.2.0",
    "esbuild": "^0.25.11",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "markdownlint-cli2": "^0.18.1",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.56.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-custom-properties": "^14.0.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "terser": "^5.44.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-plugin-solid": "^2.11.10",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": [
      "markdownlint-cli2 --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml}": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ]
  },
  "volta": {
    "node": "22.21.0"
  }
}

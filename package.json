{
  "name": "xcom-enhanced-gallery",
  "version": "0.5.0",
  "description": "Media viewer and download functionality for X.com",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "npm": {
    "nodeOptions": "--max-old-space-size=8192",
    "legacy-peer-deps": true,
    "strict-peer-dependencies": false,
    "package-lock": true,
    "prefer-dedupe": true,
    "maxsockets": 50,
    "prefer-offline": true,
    "progress": false,
    "audit": false,
    "loglevel": "error",
    "fund": false,
    "update-notifier": false,
    "optional": true,
    "fetch-timeout": 60000
  },
  "scripts": {
    "build": "tsx scripts/verify-pipeline.ts",
    "build:fast": "tsx scripts/verify-pipeline.ts --fast",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build",
    "clean": "rm -rf dist",
    "check": "run-p deps:check typecheck lint:fix styles:guard security:check",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "format": "npx --yes prettier --write .",
    "test": "npm run test:batched",
    "test:fast": "vitest run",
    "posttest:fast": "tsx scripts/cleanup-test-workers.ts",
    "test:watch": "vitest",
    "test:batched": "tsx scripts/run-unit-tests-batched.ts --monitor-memory --retry=1",
    "posttest:batched": "tsx scripts/cleanup-test-workers.ts",
    "test:ct": "playwright test -c playwright-ct.config.ts",
    "test:e2e": "playwright test",
    "test:a11y": "playwright test playwright/accessibility",
    "test:mutation": "stryker run",
    "test:visual": "playwright test -c playwright-ct.config.ts --grep @visual",
    "test:coverage": "vitest run --coverage",
    "test:all": "run-s test:batched test:ct test:visual test:a11y test:e2e",
    "deps:check": "npx --yes dependency-cruiser src --validate --config .dependency-cruiser.cjs",
    "deps:unused": "depcheck",
    "security:check": "tsx scripts/security-surface-check.ts",
    "styles:guard": "tsx scripts/validate-style-imports.ts",
    "bundle:check": "tsx scripts/check-bundle-size.ts",
    "size": "size-limit",
    "biome:check": "biome check src",
    "biome:fix": "biome check --write src"
  },
  "dependencies": {
    "solid-js": "1.9.10"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@babel/core": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@biomejs/biome": "^2.3.8",
    "@csstools/postcss-oklab-function": "^4.0.12",
    "@eslint/js": "^9.39.1",
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "@playwright/experimental-ct-solid": "^1.48.2",
    "@playwright/test": "^1.57.0",
    "@size-limit/file": "^12.0.0",
    "@size-limit/webpack": "^12.0.0",
    "@solidjs/testing-library": "^0.8.10",
    "@stryker-mutator/core": "^9.4.0",
    "@stryker-mutator/vitest-runner": "^9.4.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/eslint-plugin-jsx-a11y": "^6.10.1",
    "@types/node": "^24.10.1",
    "@vitest/browser": "^4.0.14",
    "@vitest/browser-playwright": "^4.0.14",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/ui": "^4.0.14",
    "autoprefixer": "^10.4.22",
    "axe-playwright": "^2.2.2",
    "babel-preset-solid": "^1.9.10",
    "cssnano": "^7.1.2",
    "depcheck": "^1.4.7",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "fast-glob": "^3.3.3",
    "jiti": "^2.6.1",
    "jsdom": "^27.2.0",
    "knip": "^5.71.0",
    "lint-staged": "^16.2.7",
    "msw": "^2.12.3",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "rolldown-vite": "^7.2.9",
    "size-limit": "^12.0.0",
    "terser": "^5.44.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite-plugin-monkey": "^7.1.5",
    "vite-plugin-solid": "^2.11.10",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.14"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "npx --yes prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "npx --yes prettier --write"
    ],
    "*.md": [
      "npx --yes prettier --write"
    ],
    "*.{json,yml,yaml}": [
      "npx --yes prettier --write"
    ],
    "*.{css,scss}": [
      "npx --yes prettier --write"
    ]
  },
  "overrides": {
    "tmp": "^0.2.5",
    "esbuild": "^0.27.0",
    "playwright": "^1.57.0",
    "express": "^5.0.0"
  },
  "volta": {
    "node": "24.11.1"
  }
}

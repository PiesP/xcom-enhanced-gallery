{
  "name": "xcom-enhanced-gallery",
  "version": "0.4.8",
  "description": "Media viewer and download functionality for X.com",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "npm": {
    "nodeOptions": "--max-old-space-size=8192",
    "legacy-peer-deps": true,
    "strict-peer-dependencies": false,
    "package-lock": true,
    "prefer-dedupe": true,
    "maxsockets": 50,
    "prefer-offline": true,
    "progress": false,
    "audit": false,
    "loglevel": "error",
    "fund": false,
    "update-notifier": false,
    "optional": true,
    "fetch-timeout": 60000
  },
  "scripts": {
    "// ===== QUICK REFERENCE: LOCAL vs REMOTE ===== ": "",
    "// Local Only: test:*, lint:*, format, deps:graph, maintenance:* ": "",
    "// Remote Only: GitHub Actions (.github/workflows/*.yml) ": "",
    "// Shared: build*, validate*, typecheck (Local + CI) ": "",
    "// ===== Build ===== ": "",
    "build:only": "npm run clean && vite build --mode development && vite build --mode production",
    "build": "npm run build:only && tsx ./scripts/validate-build.ts && npm run e2e:smoke",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "clean": "rimraf dist",
    "prebuild:only": "run-p typecheck lint:all deps:check",
    "// ===== NOTE: build = build:only + validate + e2e:smoke (CI/CD), build:only = fast build without validation ===== ": "",
    "// ===== Quality ===== ": "",
    "validate": "run-p typecheck lint:all && npm run format",
    "validate:pre": "run-p typecheck lint:all deps:check styles:guard",
    "validate:full": "run-p typecheck lint:all deps:check && run-s test:browser e2e:all",
    "check": "run-s validate:full test:full",
    "// ===== NOTE: 'check' = comprehensive quality + all tests (development/PR final validation) ===== ": "",
    "// ===== Typecheck ===== ": "",
    "typecheck": "tsgo --project ./tsconfig.json --noEmit",
    "typecheck:tests": "tsgo --project ./tsconfig.json --noEmit",
    "// ===== Lint ===== ": "",
    "lint": "eslint ./src --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint ./src --fix",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:css:fix": "stylelint \"src/**/*.css\" --fix",
    "lint:all": "run-p lint lint:css",
    "lint:all:fix": "run-p lint:fix lint:css:fix",
    "lint:staged": "lint-staged",
    "styles:guard": "tsx ./scripts/validate-style-imports.ts",
    "tokens:types": "tsx ./scripts/generate-design-token-types.ts",
    "pretypecheck": "npm run tokens:types",
    "pretypecheck:tests": "npm run tokens:types",
    "// ===== Format ===== ": "",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "// ===== Test: Main ===== ": "",
    "test": "NODE_OPTIONS=\"--max-old-space-size=6144 --preserve-symlinks\" tsx ./scripts/run-fast-batched.ts",
    "test:fast": "NODE_OPTIONS=\"--max-old-space-size=3072 --preserve-symlinks\" VITEST_MAX_THREADS=1 vitest --project fast run && npm run test:cleanup || npm run test:cleanup && exit 1",
    "test:full": "tsx ./scripts/run-all-tests.ts",
    "test:all": "npm run test:full",
    "test:watch": "vitest --project fast",
    "test:ui": "vitest --ui --project fast",
    "// ===== Test: Coverage ===== ": "",
    "test:coverage": "tsx ./scripts/run-vitest-project.ts unit 3072 --coverage --run",
    "pretest:coverage": "npm run build:prod",
    "// ===== Test: Projects ===== ": "",
    "test:smoke": "tsx ./scripts/run-vitest-project.ts smoke 2048",
    "test:unit": "npm run test:unit:batched",
    "test:unit:direct": "tsx ./scripts/run-vitest-project.ts unit 3072",
    "test:unit:batched": "tsx ./scripts/run-unit-tests-batched.ts --monitor-memory --retry=1",
    "test:unit:batched:enhanced": "tsx ./scripts/run-unit-tests-batched.ts --batch-size=15 --monitor-memory --retry=2 --verbose",
    "test:unit:batched:safe": "tsx ./scripts/run-unit-tests-batched.ts --batch-size=10 --monitor-memory --retry=1 --fail-fast",
    "test:styles": "tsx ./scripts/run-vitest-project.ts styles 2048",
    "test:perf": "tsx ./scripts/run-vitest-project.ts performance 2048",
    "test:phases": "tsx ./scripts/run-vitest-project.ts phases 2048",
    "test:refactor": "tsx ./scripts/run-vitest-project.ts refactor 2048",
    "test:raf": "tsx ./scripts/run-vitest-project.ts raf-timing 2048 --no-cleanup",
    "test:cleanup": "tsx ./scripts/cleanup-vitest-workers.ts",
    "// ===== Test: Browser ===== ": "",
    "test:browser": "tsx ./scripts/run-vitest-project.ts browser 3072",
    "pretest:browser": "rimraf node_modules/.vite/vitest",
    "test:browser:ui": "vitest --project browser --ui",
    "// ===== E2E ===== ": "",
    "e2e:smoke": "playwright test playwright/smoke",
    "e2e:a11y": "cross-env PLAYWRIGHT_TEST_DIR=accessibility playwright test",
    "e2e:all": "run-s e2e:smoke e2e:a11y",
    "// ===== Dependencies ===== ": "",
    "deps:check": "dependency-cruiser src --validate --config .dependency-cruiser.cjs",
    "// ===== NOTE: CI uses 'deps:check' only, graph generation is local-only ===== ": "",
    "deps:json": "tsx ./scripts/generate-dep-graph.ts --format=json",
    "deps:dot": "tsx ./scripts/generate-dep-graph.ts --format=dot",
    "deps:graph": "tsx ./scripts/generate-dep-graph.ts --format=svg",
    "deps:all": "npm run deps:check && tsx ./scripts/generate-dep-graph.ts --format=all",
    "// ===== Maintenance ===== ": "",
    "// ===== NOTE: All maintenance scripts are local-only (removed maintenance.yml workflow) ===== ": "",
    "maintenance:check": "tsx ./scripts/maintenance-check.ts",
    "maintenance:scan": "run-s maintenance:check && run-p audit outdated",
    "audit": "npm audit",
    "outdated": "npm outdated",
    "// ===== Shortcuts ===== ": "",
    "dev": "npm run validate && npm run build:dev",
    "ci": "npm run check",
    "prerelease": "npm run validate:full && npm run build",
    "// ===== Git Hooks ===== ": "",
    "prepare": "husky"
  },
  "dependencies": {
    "solid-js": "1.9.10"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@babel/core": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@csstools/postcss-oklab-function": "^4.0.12",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.56.1",
    "@solidjs/testing-library": "^0.8.10",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@typescript/native-preview": "^7.0.0-dev.20251120.1",
    "@vitest/browser": "^4.0.12",
    "@vitest/browser-playwright": "^4.0.12",
    "@vitest/coverage-v8": "^4.0.12",
    "@vitest/ui": "^4.0.12",
    "autoprefixer": "^10.4.22",
    "babel-preset-solid": "^1.9.10",
    "cross-env": "^10.1.0",
    "cssnano": "^7.1.2",
    "dependency-cruiser": "^17.3.1",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "jscpd": "^4.0.5",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.56.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-custom-properties": "^14.0.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.2",
    "rollup-plugin-visualizer": "^6.0.5",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "terser": "^5.44.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-solid": "^2.11.10",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.12"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ],
    "*.{json,yml,yaml}": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ]
  },
  "volta": {
    "node": "24.11.1"
  }
}

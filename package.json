{
  "name": "xcom-enhanced-gallery",
  "version": "0.2.3",
  "description": "Media viewer and download functionality for X.com",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite --mode development",
    "build": "npm run build:prod",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "build:all": "npm run build:dev && npm run build:prod",
    "clean": "rimraf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint ./src --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint ./src --report-unused-disable-directives --max-warnings 0 --fix",
    "lint:staged": "lint-staged",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "quality": "npm run typecheck && npm run lint && npm run format:check && npm run test",
    "validate": "npm run deps:all && npm run typecheck && npm run lint:fix && npm run format",
    "prebuild": "npm run validate && npm run test",
    "deps:check": "dependency-cruiser src --validate --config .dependency-cruiser.cjs",
    "deps:graph": "(dependency-cruiser --config .dependency-cruiser.cjs --output-type dot src | dot -Gdpi=150 -Gconcentrate=true -Grankdir=LR -Gsplines=ortho -T svg > docs/dependency-graph.svg) || dependency-cruiser --config .dependency-cruiser.cjs --output-type dot src | sfdp -Gdpi=150 -Gconcentrate=true -Grankdir=LR -Gsplines=ortho -T svg > docs/dependency-graph.svg",
    "deps:graph:dot": "dependency-cruiser --config .dependency-cruiser.cjs --output-type dot src > docs/dependency-graph.dot",
    "deps:json": "dependency-cruiser --config .dependency-cruiser.cjs --output-type json --output-to docs/dependency-graph.json src",
    "deps:all": "npm run deps:json && npm run deps:graph:dot && npm run deps:graph && npm run deps:check",
    "deps:analyze": "npm run deps:all",
    "setup:dev": "node scripts/setup-dev.js",
    "colors:convert": "node scripts/convert-colors-to-oklch.cjs",
    "colors:revert": "cp src/shared/styles/design-tokens.css.backup src/shared/styles/design-tokens.css"
  },
  "dependencies": {
    "@preact/signals": "^2.2.1",
    "@tanstack/query-core": "^5.83.1",
    "@tanstack/react-virtual": "^3.13.12",
    "fflate": "^0.8.2",
    "motion": "^12.23.12",
    "preact": "^10.27.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "9.32.0",
    "@preact/preset-vite": "^2.10.2",
    "@testing-library/jest-dom": "6.6.4",
    "@testing-library/preact": "3.2.4",
    "@types/node": "^24.1.0",
    "@types/tampermonkey": "^5.0.4",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-istanbul": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "cssnano": "7.1.0",
    "dependency-cruiser": "^17.0.0",
    "eslint": "9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "husky": "^9.1.7",
    "jsdom": "26.1.0",
    "lint-staged": "^16.1.2",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-custom-properties": "^14.0.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "terser": "5.43.1",
    "typescript": "5.8.3",
    "vite": "npm:rolldown-vite@latest",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ]
  }
}

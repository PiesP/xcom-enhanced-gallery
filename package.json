{
  "name": "xcom-enhanced-gallery",
  "version": "0.4.0",
  "description": "Media viewer and download functionality for X.com",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "// === Build ===": "",
    "build": "npm run clean && vite build --mode development && vite build --mode production",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "clean": "rimraf dist",
    "prebuild": "npm run validate:build:local",
    "postbuild": "node ./scripts/validate-build.js && npm run deps:json",
    "// === Quality Checks ===": "",
    "validate": "npm run typecheck && npm run lint:fix && npm run lint:css && npm run lint:md:fix && npm run codeql:check && npm run format",
    "validate:build": "npm run typecheck && npm run lint && npm run lint:css && npm run deps:check && npm run deps:graph && npm run codeql:check && npm run test:browser && npm run e2e:smoke && npm run e2e:a11y",
    "validate:build:local": "npm run typecheck && npm run lint && npm run lint:css && npm run deps:check && npm run deps:json && npm run test:browser && npm run e2e:smoke",
    "validate:ci": "npm run typecheck && npm run lint && npm run lint:css && npm run lint:md && npm run format:check",
    "// === Parallel Validation (Phase 203.1) ===": "",
    "validate:quality": "run-p typecheck lint lint:css",
    "validate:deps": "run-s deps:check deps:graph",
    "validate:tests": "run-p test:browser e2e:smoke",
    "validate:build:parallel": "NODE_OPTIONS='--max-old-space-size=6144' npm run validate:quality && npm run validate:deps && npm run validate:tests",
    "typecheck": "tsgo --project ./tsconfig.json --noEmit",
    "typecheck:tests": "tsgo --project ./tsconfig.tests.json --noEmit",
    "lint": "eslint ./src --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:css:fix": "stylelint \"src/**/*.css\" --fix",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"#node_modules\" \"#coverage\"",
    "lint:md:fix": "markdownlint-cli2 --fix \"**/*.md\" \"#node_modules\" \"#coverage\"",
    "lint:staged": "lint-staged",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "codeql:check": "node ./scripts/check-codeql.js",
    "// === Test ===": "",
    "test": "NODE_OPTIONS='--max-old-space-size=4096' vitest --project fast run && npm run test:raf",
    "test:all": "NODE_OPTIONS='--max-old-space-size=4096' vitest run",
    "test:watch": "NODE_OPTIONS='--max-old-space-size=3072' vitest --project fast",
    "test:ui": "NODE_OPTIONS='--max-old-space-size=3072' vitest --ui --project fast",
    "test:coverage": "NODE_OPTIONS='--max-old-space-size=3072' vitest --project unit --coverage --run",
    "pretest:coverage": "npm run build:prod",
    "test:smoke": "NODE_OPTIONS='--max-old-space-size=3072' vitest --project smoke run",
    "test:fast": "NODE_OPTIONS='--max-old-space-size=3072' vitest --project fast run",
    "test:raf": "NODE_OPTIONS='--max-old-space-size=3072' vitest --project raf-timing run",
    "test:raf:watch": "NODE_OPTIONS='--max-old-space-size=3072' vitest --project raf-timing",
    "test:unit": "NODE_OPTIONS='--max-old-space-size=4096' vitest --project unit run",
    "test:styles": "NODE_OPTIONS='--max-old-space-size=3072' vitest --project styles run",
    "test:perf": "NODE_OPTIONS='--max-old-space-size=3072' vitest --project performance run",
    "test:phases": "NODE_OPTIONS='--max-old-space-size=3072' vitest --project phases run",
    "test:refactor": "NODE_OPTIONS='--max-old-space-size=3072' vitest --project refactor run",
    "test:browser": "NODE_OPTIONS='--max-old-space-size=4096' vitest --project browser run",
    "pretest:browser": "rimraf node_modules/.vite/vitest",
    "test:browser:ui": "vitest --project browser --ui",
    "// === E2E ===": "",
    "e2e:smoke": "playwright test playwright/smoke --config=playwright.config.ts",
    "e2e:a11y": "cross-env PLAYWRIGHT_TEST_DIR=accessibility playwright test --config=playwright.config.ts",
    "// === Dependencies ===": "",
    "deps:check": "dependency-cruiser src --validate --config .dependency-cruiser.cjs",
    "deps:json": "node ./scripts/generate-dep-graph.js --format=json",
    "deps:dot": "node ./scripts/generate-dep-graph.js --format=dot",
    "deps:graph": "node ./scripts/generate-dep-graph.js --format=svg",
    "deps:all": "npm run deps:check && node ./scripts/generate-dep-graph.js --format=all",
    "// === Maintenance ===": "",
    "maintenance:check": "node ./scripts/maintenance-check.js",
    "maintenance:scan": "npm run maintenance:check && npm audit && npm outdated",
    "// === Git Hooks ===": "",
    "prepare": "husky"
  },
  "dependencies": {
    "solid-js": "1.9.9"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@babel/core": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@csstools/postcss-oklab-function": "^4.0.12",
    "@eslint/js": "^9.38.0",
    "@playwright/test": "^1.56.1",
    "@solidjs/testing-library": "^0.8.10",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/node": "^24.9.1",
    "@types/tampermonkey": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@typescript/native-preview": "^7.0.0-dev.20251026.1",
    "@vitest/browser": "^4.0.3",
    "@vitest/browser-playwright": "^4.0.3",
    "@vitest/coverage-v8": "^4.0.3",
    "@vitest/ui": "^4.0.3",
    "autoprefixer": "^10.4.21",
    "babel-preset-solid": "^1.9.9",
    "cross-env": "^10.1.0",
    "cssnano": "^7.1.1",
    "dependency-cruiser": "^17.1.0",
    "esbuild": "^0.25.11",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "happy-dom": "^20.0.8",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "lint-staged": "^16.2.6",
    "markdownlint-cli2": "^0.18.1",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.56.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-custom-properties": "^14.0.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "terser": "^5.44.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-plugin-solid": "^2.11.10",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": [
      "markdownlint-cli2 --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml}": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ]
  },
  "volta": {
    "node": "22.20.0"
  }
}

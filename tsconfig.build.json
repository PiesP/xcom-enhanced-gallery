{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Disable incremental for CI builds
    "incremental": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    ".stryker-tmp",
    "scripts/**/*",
    "test/**/*",
    "playwright/**/*"
  ]
}

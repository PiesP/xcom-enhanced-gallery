{
    "chat.mcp.serverSampling": {
        "xcom-enhanced-gallery/.vscode/mcp.json: MCP_DOCKER": {
            "allowedModels": [
                "copilot/gpt-4.1",
                "copilot/claude-opus-4",
                "copilot/claude-opus-41",
                "copilot/claude-3.5-sonnet",
                "copilot/claude-3.7-sonnet",
                "copilot/claude-3.7-sonnet-thought",
                "copilot/claude-sonnet-4",
                "copilot/claude-sonnet-4.5",
                "copilot/gemini-2.0-flash-001",
                "copilot/gemini-2.5-pro",
                "copilot/gpt-4o",
                "copilot/gpt-5",
                "copilot/gpt-5-mini",
                "copilot/gpt-5-codex",
                "copilot/grok-code-fast-1",
                "copilot/o3",
                "copilot/o3-mini",
                "copilot/o4-mini"
            ]
        }
    },
    "codeQL.createQuery.qlPackLocation": "c:\\git\\xcom-enhanced-gallery",
    // 파일 탐색기 및 검색에서 제외
    "files.exclude": {
        "**/node_modules": true,
        "**/dist": true,
        "**/build": true,
        "**/coverage": true,
        "**/.tsbuildinfo": true,
        "**/test-results": true,
        "**/playwright-report": true,
        "**/.nyc_output": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/dist": true,
        "**/build": true,
        "**/coverage": true,
        "**/test-results": true,
        "**/playwright-report": true,
        "**/.tsbuildinfo": true,
        "**/*.lock": true,
        "**/*.log": true
    },
    // TypeScript 검사에서 제외
    "typescript.tsdk": "node_modules/typescript/lib",
    "typescript.validate.enable": true,
    "typescript.preferences.includePackageJsonAutoImports": "on",
    // ESLint 검사에서 제외 (이미 eslint.config.js에 있지만 명시)
    "eslint.workingDirectories": [
        {
            "mode": "auto"
        }
    ],
    // 문제 패널 필터링
    "problems.decorations.enabled": true,
    // JavaScript/TypeScript 언어 서버 최적화
    "js/ts.implicitProjectConfig.checkJs": false,
    "javascript.validate.enable": false
    "editor.maxTokenizationLineLength": 200000
}
